.row
  .alpha.three.columns
    = f.label :description, 'Short Description'
  .omega.eight.columns
    = f.text_field :description, maxlength: 255, placeholder: 'Tell us about your enterprise in one or two sentences'
.row
  .alpha.three.columns
    = f.label :long_description, 'About Us'
  .omega.eight.columns
